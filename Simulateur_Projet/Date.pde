int jour = 1, mois = 1, annee = 2000;                                             //Variables gérant le temps
int totalJours = 0;                                                               //Total de jours passés

/*======================================================================================================================================================================================================
==================================================================================================FONCTIONS=============================================================================================
======================================================================================================================================================================================================*/

  void DayPass(){                                                                 //Fait passer le temps de 1 jour                                     
      jour++;
      totalJours++; 
      
      if(mois == 4 || mois == 6 || mois == 9 || mois == 11){
          if(jour>30) {
           jour=1;
           mois++;
          }
      }else if(mois == 2){
        
        if((annee%4 == 0 && annee%100 !=0) || annee%400==0){
          
            if(jour>29) {
              jour=1;
              mois++; 
            }else if(jour>28) {
              jour=1;
              mois++; 
            }
        }
      
    } else {
       if(jour>31) {
           jour=1;
           mois++;
          } 
    }
    
  }
